---
import { Image } from "astro:assets";
import logoAsset from "../assets/Isotipo.png";
import HeaderLink from "./HeaderLink.astro";
import { ROUTES, SOCIAL_LINKS, SITE_INFO } from "../constants";
const { lang } = Astro.props;
import { useTranslations } from "../i18n/utils";

const t = useTranslations(lang);


const homeSlug = ROUTES.home(lang);
const blogSlug = ROUTES.blog(lang);
const aboutSlug = ROUTES.about(lang);
const youTubeSlug = SOCIAL_LINKS.youtube;
---

<header>
  <nav class="flex w-full items-center p-4 gap-4">
    <Image src={logoAsset} alt="Site Logo" width={70} height={70} />
    <div class="flex-1 flex-col items-center justify-start">
      <h1 class="text-lg font-bold pl-4">
        {SITE_INFO.brandName}
      </h1>
      <div class="flex items-center divide-x divide-dashed divide-gray-400 mt-1">
        <HeaderLink href={homeSlug}>{t("nav.home")}</HeaderLink>
        <HeaderLink href={aboutSlug}>{t("nav.about")}</HeaderLink>
        <HeaderLink href={blogSlug}>Blog</HeaderLink>
        <HeaderLink href={youTubeSlug} target="_blank" rel="noopener noreferrer">YouTube</HeaderLink>
      </div>
    </div>
    <div>
      <!-- TODO: Buscador -->
       <!--TODO: theme toggle  -->
    </div>
  </nav>
</header>
