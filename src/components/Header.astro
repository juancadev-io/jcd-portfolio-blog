---
import { Image } from "astro:assets";
import logoAsset from "../assets/isotipo-juancadev.svg";
import HeaderLink from "./HeaderLink.astro";
import { ROUTES, SOCIAL_LINKS, SITE_INFO } from "../constants";
const { lang } = Astro.props;
import { useTranslations } from "../i18n/utils";

const t = useTranslations(lang);


const homeSlug = ROUTES.home(lang);
const blogSlug = ROUTES.blog(lang);
const aboutSlug = ROUTES.about(lang);
const youTubeSlug = SOCIAL_LINKS.youtube;
---

<header class="mb-8">
  <nav class="flex flex-col sm:flex-row w-full items-center gap-4 sm:gap-6">
    <!-- Logo y marca -->
    <div class="flex items-center gap-3">
      <Image 
        src={logoAsset} 
        alt="Site Logo" 
        width={50} 
        height={50}
        class="sm:w-15 sm:h-15 hover:scale-110 transition-transform duration-300"
      />
      <h1 class="text-xl sm:text-2xl font-bold gradient-text">
        {SITE_INFO.brandName}
      </h1>
    </div>
    
    <!-- Navegación -->
    <div class="flex-1 flex items-center justify-center sm:justify-start">
      <div class="flex items-center divide-x divide-gray-300">
        <HeaderLink href={homeSlug}>{t("nav.home")}</HeaderLink>
        <HeaderLink href={aboutSlug}>{t("nav.about")}</HeaderLink>
        <HeaderLink href={blogSlug}>Blog</HeaderLink>
        <HeaderLink href={youTubeSlug} target="_blank" rel="noopener noreferrer">
          <span class="hidden sm:inline">YouTube</span>
          <span class="sm:hidden">YT</span>
        </HeaderLink>
      </div>
    </div>
  </nav>
  
  <!-- Línea decorativa sutil con colores de marca -->
  <div class="mt-4 h-0.5 w-full gradient-line-h opacity-30"></div>
</header>
