---
const { date, title, href, extract } = Astro.props;
import FormattedDate from "./FormattedDate.astro";
---

<article class="group p-4 sm:p-6 rounded-lg border border-gray-600 hover:border-primary transition-all duration-300 hover:shadow-md">
  <div class="mb-2">
    <FormattedDate date={date} />
  </div>
  <h4 class="w-full mb-3">
    <a 
      class="text-lg sm:text-xl font-semibold hover:text-primary transition-colors duration-200 inline-block relative"
      href={href}
    >
      {title}
      <span class="absolute bottom-0 left-0 w-0 h-0.5 gradient-line-h group-hover:w-full transition-all duration-300"></span>
    </a>
  </h4>
  <p class="text-sm sm:text-base text-gray-400 line-clamp-2">
    {extract}
  </p>
</article>
