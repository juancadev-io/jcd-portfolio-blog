---
const { href, name } = Astro.props;
---

<a
  class="w-11 h-11 inline-flex items-center justify-center rounded-full border"
  href={href}
  target="_blank"
  rel="noreferrer noopener"
  aria-label={name}
>
  <span class="w-6 h-6 fill-current">
    <slot />
  </span>
  <span class="sr-only">{name}</span>
</a>
