---
import Layout from "../layouts/Layout.astro";
import { useTranslations, type UiType, getLangFromUrl, DEFAULT_LANG } from "../i18n/utils";
import { ROUTES } from "../constants";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homeSlug = ROUTES.blog(lang);
---

<Layout lang={lang} title={t("404.title")} description={t("404.description")}>
  <div class="flex items-center justify-center px-4 py-8 flex-1">
    <div class="w-full max-w-sm text-center flex flex-1 flex-col items-center justify-center">
      <h1 class="text-2xl md:text-3xl font-bold text-white mb-3" style="color: #007FFF;">
        {t("404.title")}
      </h1>
      <p class="text-base text-gray-300 mb-6">
        {t("404.description")}
      </p>
      <a
        href={homeSlug}
        class="inline-flex items-center justify-center px-5 py-2 rounded-lg text-white font-semibold transition-all duration-300 transform hover:scale-105"
        style="background: linear-gradient(to right, #007FFF, #FFA500); box-shadow: 0 0 20px rgba(0, 127, 255, 0.5);"
      >
        {t("404.button")}
        <svg
          class="w-4 h-4 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          />
        </svg>
      </a>
    </div>
  </div>
</Layout>
